<main class="col-md-9 ms-sm-auto col-lg-10 px-md-0 px-0 mb-0 pt-4 mt-5">
    <div class="px-5 py-5 my-5 text-center">
            <form id="petGiveAway" action="/petGiveAway" method="POST">
                <fieldset class="border p-4 rounded mb-4">
                    <legend class="fw-bold">Give Away a Pet</legend>
        
                    <div class="mb-3">
                        <label class="form-label">Pet Type:</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="PetType" id="petTypeDog" value="Dog">
                            <label class="form-check-label" for="petTypeDog">Dog</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="PetType" id="petTypeCat" value="Cat">
                            <label class="form-check-label" for="petTypeCat">Cat</label>
                        </div>
                    </div>
        
                    <div class="mb-3">
                        <label for="breed" class="form-label">Breed Type:</label>
                        <input type="text" class="form-control" name="breed" id="breed" >
                        <div class="form-check mt-2">
                        </div>
                    </div>
        
                    <div class="mb-3">
                        <label for="age" class="form-label">Age:</label>
                        <select id="age" name="age" class="form-select">
                            <option value="0-1">Less than one year</option>
                            <option value="1-3">1-3</option>
                            <option value="4-7">4-7</option>
                            <option value="7-10">7-10</option>
                            <option value="10+">More than 10 years</option>
                            <!-- <option value="No preference">No preference</option> -->
                        </select>
                    </div>
        
                    <div class="mb-3">
                        <label class="form-label">Gender:</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" id="genderFemale" value="Female">
                            <label class="form-check-label" for="genderFemale">Female</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" id="genderMale" value="Male">
                            <label class="form-check-label" for="genderMale">Male</label>
                        </div>
                        <!-- <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" id="genderNoPref" value="No preference">
                            <label class="form-check-label" for="genderNoPref">No preference</label>
                        </div> -->
                    </div>
        
                    <div class="mb-3">
                        <label class="form-label">Does your pet get along with pets?</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="petFriendly" id="dogYes" value="yes">
                            <label class="form-check-label" for="dogYes">Yes</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="petFriendly" id="dogNo" value="no">
                            <label class="form-check-label" for="dogNo">No</label>
                        </div>
                    </div>
        
                    <!-- <div class="mb-3">
                        <label class="form-label">Does your pet get along with cats?</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="catFriendly" id="catYes" value="yes">
                            <label class="form-check-label" for="catYes">Yes</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="catFriendly" id="catNo" value="no">
                            <label class="form-check-label" for="catNo">No</label>
                        </div>
                    </div> -->
        
                    <div class="mb-3">
                        <label class="form-label">Suitable for a family with small children?</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="childFriendly" id="childYes" value="yes">
                            <label class="form-check-label" for="childYes">Yes</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="childFriendly" id="childNo" value="no">
                            <label class="form-check-label" for="childNo">No</label>
                        </div>
                    </div>
        
                    <div class="mb-3">
                        <label for="brag" class="form-label">Brag about your pet:</label>
                        <textarea class="form-control" name="brag" id="brag" rows="3"></textarea>
                    </div>
                </fieldset>
        
                <fieldset class="border p-4 rounded mb-4">
                    <legend class="fw-bold">Pet Owner Personal Information</legend>
        
                    <div class="mb-3">
                        <label for="fname" class="form-label">First Name:</label>
                        <input type="text" class="form-control" name="fname" id="fname">
                    </div>
        
                    <div class="mb-3">
                        <label for="lname" class="form-label">Family Name:</label>
                        <input type="text" class="form-control" name="lname" id="lname">
                    </div>
        
                    <div class="mb-3">
                        <label class="form-label">Gender:</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ownerGender" id="ownerGenderFemale" value="Female">
                            <label class="form-check-label" for="ownerGenderFemale">Female</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ownerGender" id="ownerGenderMale" value="Male">
                            <label class="form-check-label" for="ownerGenderMale">Male</label>
                        </div>
                    </div>
        
                    <div class="mb-3">
                        <label for="ageCategory" class="form-label">What age category are you from?</label>
                        <select name="ageCategory" id="ageCategory" class="form-select">
                            <option value="Less than 18">Less than 18</option>
                            <option value="18 - 30">18 - 30</option>
                            <option value="30 - 50">30 - 50</option>
                            <option value="More than 50">More than 50</option>
                        </select>
                    </div>
        
                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" class="form-control" name="email" id="email">
                    </div>
                </fieldset>
        
                <div class="mt-4">
                    <button id="submit" type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </form>
    </div>

